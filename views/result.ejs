  <!-- Script -->

  <script>
    const finalScore = document.getElementById('finalScore');
    const mostRecentScore = localStorage.getItem('mostRecentScore');
    console.log(mostRecentScore);
    var setImage = document.getElementById('resultImage');
    console.log(setImage);
    const noStress = {
      text: "YAY!!!  You are A happy person. Keep Smiling and Shining.",
      image: "../images/no-stress.jpg"

    }

    const lowStress = {
      text: "You are having a low stress level. Be Calm and try this meditation music for additional benifits.",
      image: "../images/low-stress.jpg"
    }


    const mediumStress = {
      text: "You are having a moderate stress level.Try meditating for sometime and contact a nearby doctor.",
      image: "../images/medium-stress.jpg"
    }

    const highStress = {
      text: "You are at high stress levels. Consult a Doctor for better results.",
      image: "../images/high-stress.jpg"
    }

    const extremeStress = {
      text: "Your Stress Level is Very High. Contact a Doctor immediately.",
      image: "../images/extreme-stress.jpg"
    }

    if (mostRecentScore <= 0) {
      finalScore.innerText = noStress.text;
      setImage.src = noStress.image;
    } else if (0 < mostRecentScore && mostRecentScore <= 25) {
      finalScore.innerText = lowStress.text;
      setImage.src = lowStress.image;
    } else if (25 < mostRecentScore && mostRecentScore <= 75) {
      finalScore.innerText = mediumStress.text;
      setImage.src = mediumStress.image;
    } else if (75 < mostRecentScore && mostRecentScore <= 100) {
      finalScore.innerText = highStress.text;
      setImage.src = highStress.image;
    } else if (100 < mostRecentScore && mostRecentScore <= 150) {
      finalScore.innerText = extremeStress.text;
      setImage.src = extremeStress.image;
    }
  </script>
