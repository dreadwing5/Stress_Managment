<%- include ("./partials/signin-header") %>
<body>
<div class="hero">
  <div class="col-md-6 m-auto">
    <div class="card card-body form-box">
      <h1 class="heading"><i class="fas fa-sign-in-alt"></i>Login</h1>
      <%- include ("./partials/messages") %>
      <div class="social-icons">
        <img src="../images/fb.png">
        <img src="../images/tw.png">
        <a href="/auth/google"><img src="../images/gp.png"></a>

    </div>

      <form action="/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/register">Register</a>
      </p>
    </div>
  </div>
</div>

<!-- Bootstrap JS-->

<%- include ("./partials/signin-script") %>
</body>
</html>
